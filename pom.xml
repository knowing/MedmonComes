			<id>gemini-jpa-extension-di</id>
			<layout>p2</layout>
			<url>http://repository.mukis.de/p2/org.eclipse.gemini.ext.di</url>
		</repository>


		<!-- Apache CXF / SOAP Webservices  -->
		<repository>
			<id>apache-cxf-dosgi</id>
			<layout>p2</layout>
			<url>http://repository.mukis.de/p2/apache-cxf-dosgi-ri-1.3.1</url>
		</repository>

		<!-- scala/typesafe repositories -->
		<repository>
			<id>scala-tools.org</id>
			<name>Scala-tools Maven2 Repository</name>
			<url>http://scala-tools.org/repo-releases</url>
		</repository>
		<repository>
			<id>typesafe</id>
			<name>Typesafe Repository</name>
			<url>http://repo.typesafe.com/typesafe/releases</url>
		</repository>
		<repository>
			<id>eclipse-scala-ide</id>
			<layout>p2</layout>
			<url>http://download.scala-ide.org/releases-29/stable/site</url>
		</repository>

		<!-- additional repositories -->
		<repository>
			<id>google-guava</id>
			<name>Google Guava OSGi</name>
			<layout>p2</layout>
			<url>http://guava-osgi.googlecode.com/svn/trunk/repository</url>
		</repository>
		<repository>
			<id>logback</id>
			<layout>p2</layout>
			<url>http://logback.qos.ch/p2</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>tycho-snapshots</id>
			<url>https://oss.sonatype.org/content/groups/public/</url>
		</pluginRepository>
	</pluginRepositories>
</project>
